{deps, [{jsx,   ".*", {git, "git://github.com/xio/jsx", {tag,"develop"}}},
        {gproc,   ".*", {git, "git://github.com/voxoz/gproc", []}},
        {ekka,   ".*", {git, "git://github.com/xio/ekka", []}},
        {esockd,   ".*", {git, "git://github.com/xio/esockd", []}},
        {cowboy,   ".*", {git, "git://github.com/voxoz/cowboy2", []}},
        {gen_rpc,   ".*", {git, "git://github.com/xio/gen_rpc", []}},
        {replayq,   ".*", {git, "git://github.com/xio/replayq", []}},
        {cuttlefish,   ".*", {git, "git://github.com/xio/cuttlefish",    {tag,"develop"}}}
       ]}.

{edoc_opts, [{preprocess, true}]}.
{erl_opts, [warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import,
            warn_obsolete_guard,
            debug_info,
            {d, 'APPLICATION', emqx}]}.
{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               warnings_as_errors, deprecated_functions]}.
{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.

{plugins, [coveralls]}.
